<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/tv_list_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="请选择"
        android:textColor="#6D7278"
        android:textSize="16sp"
        app:bl_corners_topLeftRadius="6dp"
        app:bl_corners_topRightRadius="6dp"
        app:bl_solid_color="#F8F8F8" />

    <ListView
        android:id="@+id/lv_list_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:paddingBottom="6dp"
        android:scrollbars="none"
        app:bl_corners_bottomLeftRadius="6dp"
        app:bl_corners_bottomRightRadius="6dp"
        app:bl_solid_color="@color/white" />

</LinearLayout>